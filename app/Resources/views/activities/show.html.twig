{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ activity.address }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ activity.postcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ activity.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ activity.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ activity.email }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ activity.website }}</td>
            </tr>
            <tr>
                <th>Classement</th>
                <td>{{ activity.classement }}</td>
            </tr>
            <tr>
                <th>Ouverture</th>
                <td>{{ activity.ouverture }}</td>
            </tr>
            <tr>
                <th>Pricemin</th>
                <td>{{ activity.pricemin }}</td>
            </tr>
            <tr>
                <th>Pricemax</th>
                <td>{{ activity.pricemax }}</td>
            </tr>
            <tr>
                <th>Coordinates</th>
                <td>{{ activity.coordinates }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('activities_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('activities_edit', { 'id': activity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
